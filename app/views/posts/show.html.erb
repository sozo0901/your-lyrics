<div class="justify-content-md-center">
  <%= link_to user_path(@post.user.id), class:"text-dark" do %>
    <p><%= @post.user.name %></p>
    <p><%= attachment_image_tag @post.user, :image, :fill, 60, 60, fallback:"no_image.jpg", class:"mt-3 rounded-circle" %></p>
  <% end %>
  <p><%= @post.title %></p>
  <%= attachment_image_tag @post, :image, :fill, 200, 200 %>
  <p><%= @post.body %></p>
  <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(@post), method: :delete do %>
        <strong><i class="fas fa-heart"></i><span><%= @post.likes.count %></span></strong>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to post_likes_path(@post), method: :post do %>
        <strong><i class="far fa-heart"></i><span><%= @post.likes.count %></span></strong>
      <% end %>
    </p>
  <% end %>
  <% if @post.user == current_user %>
    <%= link_to "削除する", post_path(@post), method: :delete %>
  <% end %>
</div>

