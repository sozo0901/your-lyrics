<div>
  <%= attachment_image_tag @post, :image %>
  <p>Title:<%= @post.title %></p>
  <p>Lyrics:<%= @post.body %></p>
  <p><%= @post.user.name %></p>
  <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
    <%= link_to "削除する", post_path(@post), method: :delete %>
  <% end %>
</div>