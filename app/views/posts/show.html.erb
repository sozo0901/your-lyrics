<div>
  <%= attachment_image_tag @post, :image %>
  <p>Title:<%= @post.title %></p>
  <p>Lyrics:<%= @post.body %></p>
  <p><%= @post.user.name %></p>
  <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
    <%= link_to "削除する", post_path(@post), method: :delete %>
  <% end %>
  <% if @post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(@post), method: :delete do %>
        <strong><i class="fas fa-heart"></i><span><%= @post.likes.count %></span></strong>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to post_likes_path(@post), method: :post do %>
        <strong><i class="far fa-heart"></i><span><%= @post.likes.count %></span></strong>
      <% end %>
    </p>
  <% end %>
</div>