<% posts.each do |post| %>
<%= link_to post_path(post.id) do %>
<div class="card mx-auto w-50 mb-5">
  <div>
    <%= attachment_image_tag post.user, :image, :fill, 60, 60, fallback:"no_image.jpg" %>
  </div>
  <div>
    <%= post.user.name %>
  </div>
  <div>
    <strong><%= post.title %></strong>
  </div>
  <div>
    <%= attachment_image_tag post, :image, :fill, 200, 200 %>
  </div>
  <div>
     <%= post.body %>
  </div>
  <div>
    <% if post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(post), method: :delete do %>
        <strong><i class="fas fa-heart"></i><span><%= post.likes.count %></span></strong>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_likes_path(post), method: :post do %>
        <strong><i class="far fa-heart"></i><span><%= post.likes.count %></span></strong>
      <% end %>
    </p>
    <% end %>
  </div>
  <div>
    <% if post.stocked_by?(current_user) %>
    <p>
      <%= link_to post_stocks_path(post), method: :delete do %>
        <strong><i class="fas fa-bookmark"></i></strong>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_stocks_path(post), method: :post do %>
        <strong><i class="far fa-bookmark"></i></strong>
      <% end %>
    </p>
    <% end %>
  </div>
</div>
<% end %>
<% end %>






