<div class="container" style="background-color: white;">
<%= form_with model: @post, local:true do |f| %>
  <div class="form-group mx-5 pt-5">
    <h2 class="mb-3">Song Title</h2>
    <small class="form-text text-muted">必須</small>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group mx-5 mt-2 pt-5">
    <h2 class="mb-3">Song's Image</h2>
    <%= f.attachment_field :image, class: "mt-3" %>
  </div>
  <div class="form-group mx-5 mt-2 pt-5">
    <h2 class="mb-3">Lyrics</h2>
    <small class="form-text text-muted">必須</small>
    <small class="form-text text-muted">改行とスペースがそのまま反映されます</small>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="mx-5 mb-5 py-5 text-center">
    <span class="mr-2"><%= link_to "Cancel",posts_path, class: "form-control btn btn-outline-dark w-25" %></span>
    <span class="ml-2"><%= f.submit "Upload", class: "form-control btn btn-outline-dark w-50" %></span>
  </div>
<% end %>
</div>