<div class="container w-50" style="background-color: white;">
<%= form_with model: @post, local:true do |f| %>
  <div class="form-group mx-5 pt-5">
    <h2 class="mb-3">Song Title</h2>
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group mx-5 mt-2 pt-5">
    <h2 class="mb-3">Image</h2>
    <small class="form-text text-muted">必須ではないです</small>
    <%= f.attachment_field :image, autofocus: true, class: "mt-3" %>
  </div>
  <div class="form-group mx-5 mt-2 pt-5">
    <h2 class="mb-3">Lyrics</h2>
    <%= f.text_area :body, autofocus: true, class: "form-control" %>
  </div>
  <div class="mx-5 mb-5 py-5">
     <%= f.submit '変更を保存', class: "btn btn-primary" %>
  </div>
<% end %>
</div>