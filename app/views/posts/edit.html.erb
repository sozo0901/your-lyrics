<div class="container" style="background-color: white;">
  <div class="row">
    <div class="col">
      <%= form_with model: @post, local:true do |f| %>
        <div class="form-group mx-5 pt-5">
          <h2 class="mb-3">Song Title</h2>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group mx-5 mt-2 pt-5">
          <h2 class="mb-3">Image</h2>
          <small class="form-text text-muted">必須ではないです</small>
          <%= f.attachment_field :image, autofocus: true, class: "mt-3" %>
        </div>
        <div class="form-group mx-5 mt-2 pt-5">
          <h2 class="mb-3">Lyrics</h2>
          <%= f.text_area :body, autofocus: true, class: "form-control" %>
        </div>
        <div class="mx-5 mb-5 py-5 text-center">
          <span class="mr-2"><%= link_to "Cancel",post_path(@post.id), class: "form-control btn btn-outline-dark w-25" %></span>
          <span class="ml-2"><%= f.submit "Save changes", class: "form-control btn btn-outline-dark w-50" %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>