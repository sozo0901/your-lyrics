<% if @posts.exists? %>
  <div class="container">
    <div class="row">
      <div class="col">
        <%= render 'layouts/search' %>
        <ul class="nav justify-content-center h3">
          <li class="post-nav-item">
            <%= link_to "全投稿", posts_path, class: "post-nav-item__text" %>
          </li>
          <li class="post-nav-item__select">
            <%= link_to "フォロー中", following_posts_path, class: "post-nav-item__select__text" %>
          </li>
        </ul>
        <%= render 'posts/index', posts: @posts %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col">
        <ul class="nav justify-content-center h3">
          <li class="post-nav-item">
            <%= link_to "全投稿", posts_path, class: "post-nav-item__text" %>
          </li>
          <li class="post-nav-item__select">
            <%= link_to "フォロー中", following_posts_path, class: "post-nav-item__select__text" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container" style="background-color: white">
    <div class="row">
      <div class="col">
        <h2 class="d-flex justify-content-center my-5">No posts</h2>
      </div>
    </div>
  </div>
<% end %>