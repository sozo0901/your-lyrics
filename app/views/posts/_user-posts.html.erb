<% posts.each do |post| %>
<div class="container mb-3">
  <div class="card shadow">
    <div class="text-center">
      <div class="card-body">
        <p class="mb-5">投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></p>
        <div class="m-5">
          <span class="h4 m-3" id="like-btn_<%= post.id %>">
            <%= render "likes/like-btn", post: post %>
          </span>
          <span class="h4 m-3" id="stock-btn_<%= post.id %>">
            <%= render "stocks/stock-btn", post: post %>
          </span>
        </div>
        <h1 class="h1 song-title"><%= post.title %></h1>
      </div>
    </div>
    <div class="row mx-auto">
      <%= attachment_image_tag post, :image, :fill, 200, 200, class: "d-block rounded-lg m-4 shadow-lg" %>
    </div>
    <div class="text-center p-2 m-2">
      <%= simple_format(post.body.truncate(100)) %>
      <%= link_to "Show more", post_path(post.id), class: "btn btn-outline-dark" %>
    </div>
  </div>
</div>
<% end %>
<div class="d-flex justify-content-center m-3">
  <%= paginate posts %>
</div>