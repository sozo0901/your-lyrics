<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <%= link_to user_path(user.id) do %>
        <div><%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no_image.jpg") %></div>
        <td><%= user.name %></td>
        <% end %>
        <td>フォロー数: <%= user.following.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relations_path(user.id), method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relations_path(user.id), method: :post %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
