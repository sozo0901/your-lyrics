<h2>プロフィール編集</h2>
<%= render 'layouts/errors', obj: @user %>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %>
  <label for="inputName">Caption</label>
  <%= f.text_field :caption, autofocus: true, id:"inputName", placeholder:"自己紹介" %>
  <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <label for="inputName">Image</label>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %>