  <div class="container">
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-2 m-2">
          <%= attachment_image_tag @user, :image, :fill, 150, 150, format:'jpeg', fallback:"no_image.jpg", class: "rounded-circle" %>
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %>
              <span class="ml-5">
                <% if @user.id == current_user.id %>
                  <%= link_to "", edit_user_path(@user), class: "fas fa-cog btn btn-success" %>
                <% end %>
              </span>
            </h5>
            <h5>
              <%= @user.caption %>
            </h5>
            <h5>
              <% if current_user != @user %>
                <% if current_user.following?(@user) %>
                  <%= link_to "フォロー中", user_relations_path(@user.id), method: :delete, data: {confirm: "フォローを解除しますか？" }, class: "btn btn-primary" %>
                <% else %>
                  <%= link_to "フォローする", user_relations_path(@user.id), method: :post, class: "btn btn-success" %>
                <% end %>
              <% end %>
            </h5>
            <h5>
              <tr>
                <th>フォロー</th>
                <th><%= link_to @user.following.count, user_following_path(@user) %></th>
              </tr>
              <tr>
                <th>フォロワー</th>
                <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
              </tr>
            </h5>
            <h5>
              <% if current_user != @user %>
                <%= link_to 'チャットする', chat_path(@user.id) %>
              <% end %>
            </h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'posts/all_posts', posts: @posts %>
