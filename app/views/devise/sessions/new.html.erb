<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'layouts/errors', obj: @user %>
       <h1 class="text-center mt-3 display-2">Sign in</h1>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group mx-5 pt-5">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group mx-5 mt-2 pt-5">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <div class="mx-5 mb-5 py-5 text-center">
          <%= f.submit "Sign in", class: "form-control btn btn-primary w-50" %>
        </div>
      <% end %>
    </div>
  </div>
</div>