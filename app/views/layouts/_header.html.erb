<header class="shadow-sm mb-2">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <div class="mr-auto">
        <% if user_signed_in? %>
          <%= link_to image_tag("your_lyrics-removebg.png", size: "200x40"), posts_path %>
        <% else %>
          <%= link_to image_tag("your_lyrics-removebg.png", size: "200x40"), root_path %>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Home', posts_path, class: 'nav-link text-light mx-2' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Post', new_post_path, class: 'nav-link text-light mx-2' %>
