        <li class="nav-item">
           <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light mx-2' %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign in", new_user_session_path, class: 'nav-link text-light mx-2' %>
